{
    "name": "laravel/outbox",
    "description": "A robust implementation of the Transactional Outbox Pattern for Laravel applications",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "outbox",
        "pattern",
        "events",
        "transactions",
        "microservices"
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/console": "^10.0|^11.0",
        "illuminate/contracts": "^10.0|^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.0",
        "orchestra/testbench-core": "^8.32",
        "orchestra/workbench": "^8.17",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "nunomaduro/larastan": "^2.0",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Laravel\\Outbox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laravel\\Outbox\\Tests\\": "tests/",
            "Laravel\\Outbox\\Tests\\Stubs\\": "tests/Stubs/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laravel\\Outbox\\OutboxServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Daniel Nakitare",
            "email": "dnakitare@gmail.com"
        }
    ]
}
